            android:screenOrientation="portrait" />
        <activity
            android:name=".UploadSavedData.UploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Help.HelpActivity"
            android:screenOrientation="portrait" />
